<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".view.fragments.CreateFragment">

<ImageView
    android:id="@+id/create_img_product"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    app:layout_constraintBottom_toTopOf="@+id/create_tv_title"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:src="@tools:sample/avatars" />

    <EditText
        android:id="@+id/create_tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="Ürün Adı"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/create_txt_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_img_product" />

    <EditText
        android:id="@+id/create_txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:hint="0.00"
        android:inputType="numberDecimal"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/create_scrollable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_tv_title" />

<ScrollView
    android:id="@+id/create_scrollable"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/create_txt_price">

    <EditText
        android:id="@+id/create_text_description"
        android:layout_width="match_parent"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:hint="açıklama"
        android:layout_height="match_parent"
        android:textSize="16sp"
        tools:ignore="TouchTargetSizeCheck" />

</ScrollView>

<Button
    android:id="@+id/create_button2"
    android:layout_width="119dp"
    android:layout_height="49dp"
    android:layout_marginBottom="2dp"
    android:text="Kaydet"
    app:layout_constraintBottom_toTopOf="@+id/create_scrollable"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/create_tv_title" />
</androidx.constraintlayout.widget.ConstraintLayout>